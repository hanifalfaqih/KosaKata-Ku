<resources>
    <!-- Base application theme. -->
    <style name="Theme.KosaKata" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="CardViewStyle.List">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/backgroundCardViewList</item>
        <item name="strokeColor">@color/strokeCardView</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <style name="CardViewStyle.Detail">
        <item name="cardBackgroundColor">@color/backgroundCardViewDetail</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/gothic_a1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="fontFamily">@font/gothic_a1_bold</item>
    </style>

</resources>